<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:scaleType="center"
        android:id="@+id/imageView"
        android:src="@drawable/fort1"
        android:layout_marginTop="2dp"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:id="@+id/imageView2"
        android:layout_marginTop="2dp"
        android:src="@drawable/fort2"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:id="@+id/imageView3" android:layout_marginTop="2dp"
        android:src="@drawable/fort3"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" android:layout_marginTop="2dp"
        android:id="@+id/imageView4"
        android:src="@drawable/fort4"/>
</LinearLayout>
    </ScrollView>