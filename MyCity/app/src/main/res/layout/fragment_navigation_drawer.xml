<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:akhil="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="#DADADA"
    tools:context="vivz.md.tut.NavigationDrawerFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/nav_imag_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_marginTop="@dimen/nav_image_margin_top"
            android:layout_width="280dp"
            android:layout_height="160dp"
            android:id="@+id/slide"
            android:src="@drawable/warangalfortb"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
        </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:paddingTop="8dp"
        android:id="@+id/nav_recycleview"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/nav_imag_layout">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
